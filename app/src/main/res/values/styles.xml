<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="BrowserActivityTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:selectableItemBackground">@drawable/abc_btn_borderless_material</item>
        <item name="colorPrimaryDark">@color/gray_900</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="ReadabilityActivityTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="SettingActivityTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="WhitelistActivityTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="TokenActivityTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="ClearActivityTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/blue_200</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="Theme.Dialog" parent="@android:style/Theme.Dialog"/>



</resources>